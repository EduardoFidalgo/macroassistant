{
  "manifest_version": 3,
  "name": "Macro Assistant",
  "version": "3.2.1",
  "description": "Expanda texto com atalhos personalizados - Adaptado para plataformas com SLATE. âœ¨ Plataformas validadas: Discord, Slack, Bird, Teams e +",
  "permissions": ["storage", "clipboardWrite"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "host_permissions": ["<all_urls>"]
}
